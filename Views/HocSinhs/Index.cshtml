@model IEnumerable<TX2.Models.HocSinh>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LopHoc.tenlop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hoten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anhduthi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diemthi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LopHoc.tenlop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hoten)
            </td>
            <td>
                @{
                    string path = "~/Images/" + item.anhduthi;
                }
                <img src="@Url.Content(path)" width="150" alt="Anh Du Thi" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diemthi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.sbd }) |
                @Html.ActionLink("Details", "Details", new { id = item.sbd }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.sbd })
            </td>
        </tr>
    }

</table>
